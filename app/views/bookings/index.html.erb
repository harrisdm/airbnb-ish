

<div class="container">
  
  <div class="row">

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>
    
    <div class="col-xs-8">

      <!-- MENU LINKS -->
      <%== user_menu %>

        <!-- PAGE CONTENTS -->

        <div class="row col-md-12 ">
          <h4>Bookings:</h4>

<% @bookings_breakdown.each do |status, bookings| %>
  <% unless bookings.empty? %>
  <h4><%= status %></h4>
  <table class="table">
    <tr>
      <th>Property</th>
      <th>Host</th>
      <th>Check In</th>
      <th>Check Out</th>
      <th>Options</th>
    </tr>
  <% bookings.each do |booking| %>
    <tr>
      <td><%= link_to(booking.property.title, booking.property )%></td>
      <td><%= booking.property.user.name %></td>
      <td><%= date_format booking.check_in %></td>
      <td><%= date_format booking.check_out %></td>
      <td><%= link_to("View Booking", booking) %></td>
    </tr>
  <% end %>
  </table>
  <% end %>
<% end %>


        </div>

      </div>

    </div>

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>

  </div>
      

</div>  <!-- container -->