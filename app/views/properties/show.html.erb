<h1>Properties#show</h1>
<p>Find me in app/views/properties/show.html.erb</p>


<h2><%= @property.title %></h2>
<p>Type: <%= @property.property_type.name %></p>
<p>Address: <%= @property.address %></p>
<p>Lat: <%= @property.latitude %></p>
<p>Long: <%= @property.longitude %></p>
<p>Description: <%= @property.description %></p>
<p>Rent: <%= number_to_currency(@property.rent) %></p>
<p>Beds: <%= @property.beds %></p>
<p>Baths: <%= @property.baths %></p>
<p>Guests: <%= @property.max_people %></p>
<p>Min Stay: <%= @property.min_stay %></p>
<p>Check-in: <%= time_format(@property.check_in_time) %></p>
<p>Check-out: <%= time_format(@property.check_out_time) %></p>
<p>Pets:
  <% if @property.pets %>
    Yes
  <% else %>
    No
  <% end %>
</p>

<%= link_to("Edit Property", edit_property_path) %>




<%= form_tag bookings_path, :method => :post do %>

<div class="form-group"><%= label_tag :check_in %><%= date_field_tag :check_in, :class => "form-control" %></div>
<div class="form-group"><%= label_tag :check_out %><%= date_field_tag :check_out, :class => "form-control"  %></div> 
<div class="form-group"><%= label_tag :property_id %><%= text_field_tag :property_id, @property.id, :class => "form-control"  %></div> 
<div class="form-group"><%= label_tag :user_id %><%= text_field_tag :user_id, @current_user.id, :class => "form-control" %></p>
<div class="form-group"><%= label_tag :booking_status_id %><%= text_field_tag :booking_status_id, 1, :class => "form-control" %></div>

<p><%= submit_tag "Make Booking" %></p>
<% end %>




<div>
<iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=<%= @property.latitude %>%2C%20%20<%= @property.longitude %>&key=AIzaSyAAiCRdJuc3KbZmfKzLhPkm4DAoG5-7lcA"></iframe>
</div>

<h2>Nearby Properties</h2>
<ul>
<% for property in @property.nearbys(10) %>
  <li><%= link_to( property.title, property) %> (<%= property.distance.round(2) %>, miles)</li>
<% end %>
</ul>