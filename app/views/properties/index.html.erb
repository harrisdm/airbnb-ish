<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/trunk/richmarker/src/richmarker-compiled.js' type='text/javascript'></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script>




<div class="row'">

  <div class="col-sm-6">

   <div class="sidebar container-fluid">
    <div class="row">
      <%= form_tag properties_path, :method => :get do %>
        <div class="form-group">
          <div class="col-xs-10">
          <%= text_field_tag :search, params[:search], :class => "form-control", :placeholder => "Location" %>
          </div>
          <div class="col-xs-2">
          <%= submit_tag "Search", :name => nil, :class => "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>

    <% unless @properties.nil? %>

    <% @properties.each do |property| %>
      <% @property = property %>
      <div class="col-xs-6">
      <%= render :partial => "miniListing" %>
      </div>

    <% end %>
    <%= will_paginate @properties %>

    <% end %>
    </div>
  </div>



  <!-- Display the map -->
  <div class="col-sm-6">
    <div class="map-container">
      <div id="map"></div>
    </div>
  </div>

</div>


<%
@hash = Gmaps4rails.build_markers(@properties) do |property, marker|
  marker.lat property.latitude
  marker.lng property.longitude
  marker.infowindow "$#{property.rent}"

  @property = property
  html = render :partial => "miniListing"
  marker.json({ title: "$#{property.rent.round}", html: html })
end
%>

<script type="text/javascript">
buildMap(<%=raw @hash.to_json %>);
</script>

