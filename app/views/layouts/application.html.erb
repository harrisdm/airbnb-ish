<!DOCTYPE html>
<html>
<head>
  <title>Rentals</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>                        
      </button>
      <a class="navbar-brand" href="<%= root_path %>">Airbnb</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <ul class="nav navbar-nav navbar-right">
        <% unless @current_user.present? %>
          <li><a href="<%= signup_path %>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
          <li><a href="<%= login_path %>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <% else %>
          <li><a href="<%= users_edit_path %>"><span class="glyphicon glyphicon-user"></span> <%= @current_user.first_name %></a></li>
          <li><a href="<%= logout_path %>"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>

  <div class="container-fluid">
    <% if flash[:notice].present? %>
      <h2><%= flash[:notice] %></h2>
    <% end %>

    <%= yield %>
  </div>


</body>
</html>
