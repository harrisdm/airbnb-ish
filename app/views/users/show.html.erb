


<div class="container">
  
  <div class="row">

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>
    
    <div class="col-xs-8">

      <!-- MENU LINKS -->
      <%== user_menu %>
     

      <!-- PROFILE DETAILS -->

      <div class="row text-center">
        <div class="col-sm-6">
          <div class="col-xs-2"></div>
          <div class="col-xs-8 text-center">
            <div class="profile-image-container">
              <%= image_tag(profile_image_link(@user)) %>
            </div>
          </div>
          <div class="col-xs-2"></div>
        </div>
        <div class="col-sm-6">
          <div class="row col-xs-12">
            <h1><%= @user.name %></h1>
          </div>
          <div class="row col-xs-12">
            <p>Email: <span class="bold"><%= @user.email %></span></p>
            <p>Member Since: <span class="bold"><%= date_format(@user.created_at) %></span></p>
          </div>
        </div>
      </div>

    </div>

  </div>

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>

  </div>
  
</div>  <!-- container -->








