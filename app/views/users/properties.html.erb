


<div class="container">
  
  <div class="row">

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>
    
    <div class="col-xs-8">

      <!-- MENU LINKS -->
      <%== user_menu %>

        <!-- PAGE CONTENTS -->

        <div class="row">
          <div class="col-xs-8"><h4>Listings:</h4></div>
          <div class="col-xs-4 text-right"><%= link_to("Add Property", new_property_path, :class => "btn btn-success") %></div>
        </div>
          <% if @properties.empty? %>
            <div class="row col-xs-12 panel text-center">
            No properties listed
            </div>
          <% else %>
            <% @properties.each do |property| %>
              <div class="col-sm-6 col-md-4">
                <%== property_listing(property) %>
              </div>
            <% end %>
          <% end %>
        </div>

      </div>

    </div>

    <!-- PAGE BUFFER -->

    <div class="col-xs-2"></div>

  </div>
  
</div>  <!-- container -->








